{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "employee": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "age": { "type": "integer" },
        "salary": { "type": ["number", "null"] },
        "endereco": {
          "type": "object",
          "properties": {
            "rua": { "type": "string" },
            "numero": { "type": "integer" }
          },
          "required": ["rua", "numero"],
          "additionalProperties": false
        },
        "filhos": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" }
            },
            "required": ["name"],
            "additionalProperties": false
          }
        }
      },
      "required": ["id", "name", "age"],
      "additionalProperties": false
    }
  },
  "type": "array",
  "items": { "$ref": "#/definitions/employee" }
}
